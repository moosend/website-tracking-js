{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es3",
    "module": "commonjs",
    "declaration": true,
    "pretty": true,
    "types": [
      "tape",
      "node",
      "uuid",
      "sinon",
      "es6-shim"
    ]
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*", 
    "local.d.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}