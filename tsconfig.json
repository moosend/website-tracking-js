{
    "compilerOptions": {
        "declaration": false,
        "rootDir": "src",
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "pretty": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom",
            "scripthost"
        ],
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "lodash/*": [
                "node_modules/@types/lodash-es/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist"
    ]
}