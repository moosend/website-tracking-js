{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "lib",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "lib": ["es2015", "dom", "scripthost"],
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "lodash/*": [
              "node_modules/@types/lodash-es/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}